---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import LinkedInIcon from '../icons/LinkedInIcon.astro';
import SocialPill from '../components/SocialPill.astro';
import GithubIcon from '../icons/GithubIcon.astro';
import MailIcon from '../icons/MailIcon.astro';
import Experience from '../components/Experience.astro';
import Briefcase from '../icons/Briefcase.astro';
---

<Layout title="Portfolio de Jaime Hurtado - Desarrollador y Programador Web">
	<main>
		<SectionContainer class="py-44 pb-24">
			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">Hola, soy Jaime
				<div class="flex justify-center items-center"><Badge>Disponible para trabajar</Badge></div>
			</h1>
			<h2 class="text-xl opacity-80 text-wrap">
				<span>+ 15 años de mierda.</span>
				<span class="text-yellow-200/90">Desarrollador web y creador de mierda.</span>
				<span class="text-red-200/90"> De Granada, España.</span>  
				<span class="opacity-75">Me especializo en crear aplicaciones unicas.</span>
			</h2>
			<nav class="flex gap-x-4 mt-8">
				<SocialPill href="https://www.linkedin.com/in/jaime-hurtado-ure%C3%B1a-b70789296/">
					<LinkedInIcon class="size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/jaimehu20">
					<GithubIcon class="size-6"/>
					Github
				</SocialPill>
				<SocialPill href="https://github.com/jaimehu20">
					<MailIcon class="size-6"/>
					jaimehu.dev@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>
		<SectionContainer id="experiencia">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7"/>
				Experiencia Laboral</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>